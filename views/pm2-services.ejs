<!DOCTYPE html>
<html lang="en" class="dark" data-bs-theme="dark">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/png" sizes="32x32" href="/assets/img/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="96x96" href="/assets/img/favicon-96x96.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/assets/img/favicon-16x16.png">
  <link rel="stylesheet" href="/assets/css/main.css" preload="true" as="style" />
  <link rel="stylesheet" href="/assets/css/toaster.css" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css"
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="https://cdn.datatables.net/2.1.2/css/dataTables.dataTables.min.css"
    crossorigin="anonymous" />


  <title>Beast</title>


</head>

<body>
  <div class="d-flex">
    <%- include('sidebar.ejs') %>

    <div class="content flex-grow-1">
      <button class="btn btn-dark sidebar-toggle" onclick="toggleSidebar()">â˜°</button>
      <div id="content-area">
        <div class="container">
          <table class="cell-border compact stripe" id="myTable" style="width:100%;"></table>
        </div>
      </div>
    </div>
  </div>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <script src="/assets/js/main.js" defer></script>
  <script src="https://cdn.datatables.net/2.1.2/js/dataTables.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" crossorigin="anonymous"
    referrerpolicy="no-referrer"></script>

  <script>
    const restartServive = (id) => {
      isConfirmed = confirm('Are you sure you want to restart this service?')
      if (isConfirmed) {
        fetch(`/api/services/${id}/restart`,{
          method:'POST'
        }).then((result) => {
          return result.json()
        }).then((response) => {
          if (!response.error) {
            dataTablePopulate()
          }
        })
      }
    }

    const stopServive = (id) => {
      isConfirmed = confirm('Are you sure you want to stop this service?')
      if (isConfirmed) {
        fetch(`/api/services/${id}/stop`,{
          method:'POST'
        }).then((result) => {
          return result.json()
        }).then((response) => {
          if (!response.error) {
            dataTablePopulate()
          }
        })
      }
    }

    const startServive = (id) => {
      isConfirmed = confirm('Are you sure you want to start this service?')
      if (isConfirmed) {
        fetch(`/api/services/${id}/start`,{
          method:'POST'
        }).then((result) => {
          return result.json()
        }).then((response) => {
          if (!response.error) {
            dataTablePopulate()
          }
        })
      }
    }

    const renderButtons = (status, id) => {
      switch (status) {
        case 'online':
          return `
        <a style="margin-right: 8px"><button class="btn btn-sm btn-danger" onclick="stopServive(${id})">Stop</button></a>
        <a onclick="restartServive(${id})"><button class="btn btn-sm btn-warning">Restart</button></a>
      `;
        case 'stopped':
          return `
        <a><button class="btn btn-sm btn-success" onclick="startServive(${id})">Start</button></a>
      `;
        case 'errored':
          return `
        <a><button class="btn btn-sm btn-warning" onclick="restartServive(${id})">Restart</button></a>
      `;
        default:
          return `
        <button class="btn btn-sm btn-secondary" disabled>Status Unknown</button>
      `;
      }
    };
    function dataTablePopulate() {
      try {
        $('#myTable').DataTable({

          processing: false,
          language: {
            search: "",
            searchPlaceholder: "Search Service",
            sLengthMenu: "Show _MENU_",
          },
          ajax: {
            url: '/api/services',
            type: 'GET',
            oLanguage: {
              sEmptyTable: "Reports is empty"
            },
            dataSrc: function (body) {
              return body.data
            },
          },
          initComplete: function (settings, json) {
            $('body').find('.dataTables_scrollBody').addClass("scrollbar")
          },
          scrollX: true,
          paging: true,
          autoWidth: true,
          deferRender: true,
          pageLength: 10,
          destroy: true,
          "order": [
            [0, "desc"]
          ],
          columns: [{
            data: 'id',
            title: 'ID',
          },
          {
            data: 'name',
            title: 'Name'
          },
          {
            data: 'status',
            title: 'Status',
            render: (data, type, row) => {
              const { status, id } = row;
              return renderButtons(status, id)
            }
          }
          ],
        });
      } catch (error) {
        console.log(error);
      }
    }
    $(document).ready(function () {
      dataTablePopulate()
    })
    function loadPage(page) {
      $('#content-area').load(page, function () {
        const sidebar = document.getElementById('sidebar');
        if (window.innerWidth <= 768) {
          sidebar.classList.remove('open');
        }
      });
    }

    function toggleSidebar() {
      const sidebar = document.getElementById('sidebar');
      sidebar.classList.toggle('open');
    }
  </script>
</body>

</html>