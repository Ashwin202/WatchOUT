<!DOCTYPE html>
<html lang="en" class="dark" data-bs-theme="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/png" sizes="32x32" href="/assets/img/WatchOUT(32x32).png">
  <link rel="icon" type="image/png" sizes="96x96" href="/assets/img/WatchOUT(96x96).png">
  <link rel="icon" type="image/png" sizes="16x16" href="/assets/img/WatchOUT(144x144).png">
  <link rel="stylesheet" href="/assets/css/main.css" preload="true" as="style" />
  <link rel="stylesheet" href="/assets/css/toaster.css" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.datatables.net/2.1.2/css/dataTables.dataTables.min.css" crossorigin="anonymous" />
  <title>WatchOUT</title>
</head>
<body>
  <div class="d-flex">
    <%- include('sidebar.ejs') %>
    <div class="content flex-grow-1">
      <button class="btn btn-dark sidebar-toggle" onclick="toggleSidebar()">â˜°</button>
      <div id="content-area">
        <div class="container">
          <div class="inter-xxl-bold mb-2">PM2 Services</div>
          <div class="text-center" id="no-services" style="display: none;">No Services Available</div>
          <div class="row" id="services-list">
          </div>
          <table class="cell-border compact stripe" id="myTable" style="width:100%;"></table>
        </div>
      </div>
    </div>
  </div>
  <div class="modal fade" id="service-actions-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <div class="modal-title inter-xl-bold">Actions</div>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true" style="color: rgb(230, 230, 230);">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="inter-lg-bold text-center">Service: <span class="inter-lg" id="service-modal-header"></span> <span class="inter mb-1" id="service-modal-status"></span></div>
          <div class="d-flex mt-2" style="justify-content: space-between">

            <div class="inter-bold">Uptime: <span class="inter" id="service-modal-uptime"></span></div>
            <div class="inter-bold">Restarts: <span class="inter" id="service-modal-restarts"></span></div>
            <div class="inter-bold">Memory: <span class="inter" id="service-modal-memory"></span></div>
          </div>
         <div class="mt-3" id="service-actions-body"></div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <script src="https://cdn.datatables.net/2.1.2/js/dataTables.min.js"></script>
  <script src="/assets/js/main.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  <script>
    const restartServive = (id) => {
      isConfirmed = confirm('Are you sure you want to restart this service?')
      if (isConfirmed) {
        fetch(`/api/services/${id}/restart`,{
          method:'POST'
        }).then((result) => {
          return result.json()
        }).then((response) => {
          $('#service-actions-modal').modal('hide')
          if (!response.error) {
              getServiceList()
          }
        })
      }
    }
    const stopServive = (id) => {
      isConfirmed = confirm('Are you sure you want to stop this service?')
      if (isConfirmed) {
        fetch(`/api/services/${id}/stop`,{
          method:'POST'
        }).then((result) => {
          return result.json()
        }).then((response) => {
          $('#service-actions-modal').modal('hide')
          if (!response.error) {
              getServiceList()
          }
        })
      }
    }
    const startServive = (id) => {
      isConfirmed = confirm('Are you sure you want to start this service?')
      if (isConfirmed) {
        fetch(`/api/services/${id}/start`,{
          method:'POST'
        }).then((result) => {
          return result.json()
        }).then((response) => {
          $('#service-actions-modal').modal('hide')
          if (!response.error) {
              getServiceList()
          }
        })
      }
    }
    const renderButtons = (status, id) => {
      switch (status) {
        case 'online':
          return `<a style="margin-right: 8px"><button class="btn btn-sm btn-danger" onclick="stopServive(${id})">Stop</button></a>
                  <a onclick="restartServive(${id})"><button class="btn btn-sm btn-warning">Restart</button></a>`;
        case 'stopped':
          return `<a><button class="btn btn-sm btn-success" onclick="startServive(${id})">Start</button></a>`;
        case 'errored':
          return `<a><button class="btn btn-sm btn-warning" onclick="restartServive(${id})">Restart</button></a>`;
        default:
          return `<button class="btn btn-sm btn-secondary" disabled>Status Unknown</button>`;
      }
    };
    const renderBadges = (status) => {
      switch (status) {
        case 'online':
          return `<span class="badge badge-success">Running</span>`;
        case 'stopped':
          return `<span class="badge badge-danger">Stopped</span>`;
        case 'errored':
          return `<span class="badge badge-danger">Stopped</span>`;
        default:
          return `<span class="badge badge-secondary">Status Unknown</span>`;
      }
    };
    function getServiceList() {
      const serviceList = document.getElementById('services-list')
      fetch('/api/services').then((result) => {
        return result.json()
      }).then((response) => {
        if (response.error || response.data.length === 0) {
          document.getElementById('no-services').style.display = 'block'
          return
        }else{
          document.getElementById('no-services').style.display = 'none'
          const data = response.data
          serviceList.innerHTML = ''
          for (let i = 0; i < data.length; i++) {
            const service = data[i]
            serviceList.innerHTML += `
              <div class="col-md-4 mb-3 p-0 pr-3 parent-service-card" onclick="openServiceActionModal(${service.id}, '${service.name}', '${service.status}', '${service.uptime}', '${service.restarts}', '${service.memory}')">
                <div class="card p-2"><div class="d-flex"><div class="flex-shrink-0 p-1">
                      <img src="/assets/img/service.png" alt="..." width="45px"></div>
                    <div class="flex flex-grow-1 ms-3  pl-3" style="flex-direction: column;">
                      <div class=" text-left inter-lg-bold">${service.name}</div>
                      <div class="">${renderBadges(service.status)}</div>
                    </div>
                    <div class="flex-shrink-0 p-1"><i class="fa fa-angle-right"></i></div>
                  </div>
                </div>
              </div>
            `
        }
      }
      })
    }
    $(document).ready(function () {
      getServiceList()
    })
    function loadPage(page) {
      $('#content-area').load(page, function () {
        const sidebar = document.getElementById('sidebar');
        if (window.innerWidth <= 768) {
          sidebar.classList.remove('open');
        }
      });
    }

    function openServiceActionModal(id, name, status, uptime, restarts, memory) {
      document.getElementById('service-modal-header').innerHTML =name
      document.getElementById('service-modal-status').innerHTML =renderBadges(status)
      document.getElementById('service-modal-uptime').innerHTML = uptime
      document.getElementById('service-modal-restarts').innerHTML = restarts
      document.getElementById('service-modal-memory').innerHTML = memory
      document.getElementById('service-actions-body').innerHTML = renderButtons(status, id)
      if(sidebar.classList.toggle('open'))
        toggleSidebar()
      $('#service-actions-modal').modal('show')
    }
    function toggleSidebar() {
      const sidebar = document.getElementById('sidebar');
      sidebar.classList.toggle('open');
    }
  </script>
</body>

</html>