<div id="sidebar" class="sidebar flex-shrink-0 p-3">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="close-sidebar-mobile" onclick="toggleSidebar()" style="display: none;">
    <span aria-hidden="true" style="color: rgb(230, 230, 230);">&times;</span>
  </button>
  <div class="text-light p-2 inter-xl ">WatchOUT <img src="/assets/img/WatchOUT.png" alt="WatchOUT" width="45"></div>
  <a href="/" class="nav-link inter <%= pageName === 'pm2-services' ? 'active' : '' %>">PM2 Services</a>
  <a href="/page1" class="nav-link inter <%= pageName === 'server-stats' ? 'active' : '' %>">Stats</a>
  <div id="bottom-div" class="bottom-div w-100">
    <div class="inter" data-toggle="modal" onclick="openSelectHostModal()" style="cursor: pointer;"><i> <i class="fas fa-server"></i> </i> Select Host</div>
    <div class="inter-sm mt-1" style="font-style: italic; opacity: 0.4;"><i class="fas fa-link"></i> Connected to 127.0.0.1</div>
  </div>
</div>

<div class="modal fade" id="test" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title inter-lg-bold" id="exampleModalLabel">Select Host</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true" style="color: rgb(230, 230, 230);">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="hostSelect">Host</label>
          <div class="d-flex align-items-center">
            <select id="hostSelect" class="form-control hostSelect mr-2">
              <option>Host 1</option>
              <option>Host 2</option>
              <option>Host 3</option>
            </select>
            <button type="button" class="btn btn-outline-primary" id="addFieldsButton">
              <i class="fas fa-plus"></i>
            </button>
          </div>
        </div>
        <div id="additionalFields" class="animated-content">
          <div class="form-group">
            <label for="hostname">Hostname</label>
            <input type="text" class="form-control" id="hostname" placeholder="Enter hostname">
          </div>
          <div class="form-group">
            <label for="ip">IP Address</label>
            <input type="text" class="form-control" id="ip" placeholder="Enter IP address">
          </div>
          <div class="form-group">
            <label for="fileOrPassword">Key: </label>
            <input type="radio" id="fileOption" name="fileOrPassword" value="file" checked>
            <label for="fileOption">File Upload</label>
            <input type="radio" id="passwordOption" name="fileOrPassword" value="password">
            <label for="passwordOption">Password</label>
            <input type="file" class="form-control mt-2" id="fileUpload">
            <input type="password" class="form-control mt-2 d-none" id="passwordInput" placeholder="Enter password">
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> -->
        <button type="button" class="btn btn-primary">Connect <i><i class="fas fa-long-arrow-alt-right"></i></i></button>
      </div>
    </div>
  </div>
</div>
